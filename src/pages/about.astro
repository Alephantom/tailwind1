import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';


const metadata = {
  title: 'About She Leads Product',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
  tagline="About us"
  image={{
    src: '~/assets/images/abstract-psychedelic-papercut-background.jpg',
    alt: 'papercut image designed by Freepik',
  }}
>
  <Fragment slot="title">
    Empowering Women in Product Management <br />
    <span class="text-accent dark:text-white highlight"> Together, We Build the Future</span>
  </Fragment>

  <Fragment slot="subtitle">
    Women make up only 26% of the tech workforce globally, and just 14% hold leadership positions in STEM. This
    underrepresentation highlights the need for initiatives that amplify women's voices, showcase their work, and create
    a supportive community. <strong>She Leads Product</strong> exists to empower women to make their achievements visible,
    inspire others, and pave the way for future generations. Join us in breaking barriers and reshaping the face of
    tech.
  </Fragment>
</Hero>

<!-- Stats Widget ****************** -->

<Stats
  title="Why She Leads Product Matters"
  stats={[
    { title: 'Women in Tech', amount: '26%' },
    { title: 'Women in STEM Leadership', amount: '14%' },
    { title: 'Global Gender Pay Gap in STEM', amount: '16%' },
    { title: 'Women Inventors', amount: '10%' },
  ]}
/>

<!-- Features3 Widget ************** -->

<Features3
  columns={3}
  isAfterContent={true}
  items={[
    {
      title: 'Visibility',
      description:
        'By showcasing the work of women in product management, we shine a spotlight on achievements that inspire and break stereotypes.',
      icon: 'tabler:eye',
    },
    {
      title: 'Empowerment',
      description:
        'Creating a space where women feel supported, valued, and encouraged to share their skills and ideas.',
      icon: 'tabler:heart',
    },
    {
      title: 'Collaboration',
      description:
        'Building a network of professionals who exchange ideas, mentor each other, and foster innovation in product management.',
      icon: 'tabler:users',
    },
    {
      title: 'Advocacy',
      description:
        'Driving awareness about the challenges women face in tech and pushing for change through community initiatives.',
      icon: 'tabler:user',
    },
    {
      title: 'Skill Development',
      description:
        'Providing resources, workshops, and opportunities for women to continuously grow and thrive in their careers.',
      icon: 'tabler:school',
    },
    {
      title: 'Recognition',
      description:
        'Highlighting contributions of women in tech to ensure their work gets the credit it deserves.',
      icon: 'tabler:award',
    },
  ]}

/>

<!-- Steps2 Widget ****************** -->

<Steps2
  title="Our Values"
  subtitle="At She Leads Product, we are driven by values that foster inclusion, innovation, and empowerment."
  items={[
    {
      title: 'Community Support',
      description:
        'Creating a network where women uplift and learn from each other, fostering growth and mutual success.',
    },
    {
      title: 'Breaking Barriers',
      description:
        'Challenging stereotypes and advocating for equitable representation in STEM and tech industries.',
    },
    {
      title: 'Celebrating Achievements',
      description:
        'Acknowledging and promoting the incredible contributions women make in product management.',
    },
  ]}
/>

